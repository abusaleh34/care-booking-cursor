async function clearDatabase() {
  console.log('üßπ Clearing existing data...');
  
  const entities = [
    'Review',
    'Booking',
    'Service',
    'ProviderAvailability',
    'ServiceProvider',
    'AdminUser',
    'User',
    'ServiceCategory'
  ];

  for (const entity of entities) {
    await getRepository(entity).query(`TRUNCATE TABLE "${entity}" CASCADE`);
  }
}

