{
  "name": "care-services-backend",
  "version": "1.0.0",
  "description": "Self-care service booking platform backend",
  "author": "Care Services Team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:load": "artillery run test/load/load-test.yml",
    "test:security": "npm audit && snyk test",
    "seed:customer": "ts-node scripts/seed-customer-data.ts",
    "seed:performance": "ts-node scripts/seed-performance-data.ts",
    "seed": "ts-node scripts/seed-test-data.ts",
    "seed:full": "ts-node scripts/seed-test-data.ts",
    "db:setup": "./scripts/setup-database.sh",
    "db:reset": "npm run migration:revert && npm run migration:run",
    "db:check-indexes": "ts-node scripts/check-indexes.ts",
    "db:fix-indexes": "./scripts/fix-email-index.sh",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/database/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/database/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/database/data-source.ts",
    "db:optimize": "ts-node scripts/optimize-database.ts",
    "health:check": "ts-node scripts/health-check.ts",
    "deploy:staging": "npm run build && npm run test && npm run test:e2e",
    "deploy:production": "npm run deploy:staging && npm run test:load && npm run test:security"
  },
  "dependencies": {
    "@google-analytics/data": "^4.3.0",
    "@google-cloud/storage": "^7.0.0",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/platform-socket.io": "^11.1.3",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.3",
    "@sentry/node": "^9.30.0",
    "@sentry/tracing": "^7.120.3",
    "@types/ioredis": "^4.28.10",
    "@types/stripe": "^8.0.416",
    "aws-sdk": "^2.1491.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.0.0",
    "cache-manager": "^6.4.3",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "datadog-metrics": "^0.9.3",
    "dayjs": "^1.11.10",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.5.0",
    "google-auth-library": "^9.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.11.0",
    "mixpanel": "^0.18.0",
    "multer": "^2.0.1",
    "nest-winston": "^1.10.2",
    "newrelic": "^11.4.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "prom-client": "^15.0.0",
    "puppeteer": "^24.10.0",
    "qrcode": "^1.5.3",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sanitize-html": "^2.11.0",
    "sharp": "^0.32.6",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.1.7",
    "stripe": "^18.1.1",
    "twilio": "^4.19.0",
    "typeorm": "^0.3.17",
