# Application Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_database_password
DATABASE_NAME=care_services_db

# Database Optimization
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_ACQUIRE_TIMEOUT=30000
DB_TIMEOUT=5000
DB_QUERY_TIMEOUT=10000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_QUEUE_DB=1
REDIS_KEY_PREFIX=care-services:

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRATION=3600
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_key_here
JWT_REFRESH_EXPIRATION=604800

# Performance Optimization
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESS=false

# Slow Down Protection
SLOW_DOWN_WINDOW_MS=900000
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_DELAY_MS=500

# Pagination
DEFAULT_PAGE_LIMIT=20
MAX_PAGE_LIMIT=100

# Cache TTL (seconds)
CACHE_TTL_SEARCH=900
CACHE_TTL_PROVIDER=3600
CACHE_TTL_CATEGORIES=86400
CACHE_TTL_SESSION=3600
CACHE_TTL_AVAILABILITY=300
CACHE_TTL_DASHBOARD=300
CACHE_TTL_STATIC=604800

# Background Jobs Concurrency
QUEUE_EMAIL_CONCURRENCY=10
QUEUE_SMS_CONCURRENCY=5
QUEUE_ANALYTICS_CONCURRENCY=3
QUEUE_REPORTS_CONCURRENCY=2
QUEUE_CLEANUP_CONCURRENCY=1

# Monitoring & APM
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_RETRIES=3

# Sentry Configuration
SENTRY_DSN=your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=0.1

# New Relic Configuration
NEW_RELIC_ENABLED=false
NEW_RELIC_APP_NAME=Care Services Backend
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Datadog Configuration
DATADOG_ENABLED=false
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Brute Force Protection
BRUTE_FREE_RETRIES=5
BRUTE_MIN_WAIT=5000
BRUTE_MAX_WAIT=900000
BRUTE_LIFETIME=3600000

# Performance Thresholds
THRESHOLD_API_P50=100
THRESHOLD_API_P95=200
THRESHOLD_API_P99=500
THRESHOLD_DB_SLOW=1000
THRESHOLD_DB_CRITICAL=5000
THRESHOLD_CACHE_WARNING=0.7
THRESHOLD_CACHE_CRITICAL=0.5
THRESHOLD_ERROR_WARNING=0.01
THRESHOLD_ERROR_CRITICAL=0.05

# File Storage Configuration
STORAGE_PROVIDER=local
LOCAL_UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 Configuration (if using AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Google Cloud Storage (if using GCP)
GCP_PROJECT_ID=your_gcp_project_id
GCP_KEY_FILENAME=path/to/service-account-key.json
GCP_STORAGE_BUCKET=your_gcs_bucket_name

# CDN Configuration
CDN_ENABLED=false
CDN_BASE_URL=https://your-cdn-domain.com

# Image Optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY=80

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@careservices.com

# Google Integrations
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_MAPS_ENABLED=true
GOOGLE_ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_MEASUREMENT_ID=GA_MEASUREMENT_ID
GOOGLE_ANALYTICS_API_SECRET=your_ga_api_secret

# Facebook Integration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Mixpanel Analytics
MIXPANEL_ENABLED=false
MIXPANEL_TOKEN=your_mixpanel_token

# Apple Pay Configuration
APPLE_PAY_ENABLED=false
APPLE_PAY_MERCHANT_ID=merchant.com.yourcompany.careservices
APPLE_PAY_DOMAIN_VERIFICATION=your_domain_verification_file

# Google Pay Configuration
GOOGLE_PAY_ENABLED=false
GOOGLE_PAY_MERCHANT_ID=your_google_pay_merchant_id

# MADA Payment Configuration (Saudi Arabia)
MADA_ENABLED=false
MADA_MERCHANT_ID=your_mada_merchant_id
MADA_API_KEY=your_mada_api_key

# Notification Configuration
PUSH_NOTIFICATIONS_ENABLED=true
FCM_SERVER_KEY=your_firebase_server_key
FCM_PROJECT_ID=your_firebase_project_id

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Testing Configuration (for load testing)
LOAD_TEST_ENABLED=false
LOAD_TEST_CONCURRENT_USERS=100
LOAD_TEST_DURATION=60

# Security Testing
SECURITY_SCAN_ENABLED=false
VULNERABILITY_SCAN_INTERVAL=86400000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=local

# Feature Flags
FEATURE_SOCIAL_LOGIN=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_REAL_TIME_CHAT=true
FEATURE_VIDEO_CALLS=false
FEATURE_AI_RECOMMENDATIONS=false
FEATURE_MULTI_LANGUAGE=false
FEATURE_DARK_MODE=true
FEATURE_OFFLINE_MODE=false

# Business Configuration
PLATFORM_COMMISSION_RATE=0.10
MINIMUM_BOOKING_AMOUNT=10.00
MAXIMUM_BOOKING_AMOUNT=10000.00
BOOKING_CANCELLATION_WINDOW=24
REVIEW_MODERATION_ENABLED=true
AUTO_APPROVAL_THRESHOLD=4.5

# Geolocation Configuration
DEFAULT_SEARCH_RADIUS=50
MAX_SEARCH_RADIUS=200
GEOLOCATION_PRECISION=3

# Development & Testing
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=false
ENABLE_QUERY_LOGGING=false
ENABLE_REQUEST_LOGGING=false
ENABLE_PERFORMANCE_LOGGING=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1 