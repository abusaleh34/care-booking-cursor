# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================

NODE_ENV=production
PORT=3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=care_services_prod
DB_PASSWORD=your_secure_database_password_here
DB_DATABASE=care_services_production
DB_SSL=true
DB_SYNCHRONIZE=false
DB_LOGGING=false

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_64_chars_minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_64_chars_minimum
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# REDIS CACHE CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0
REDIS_TTL=3600

# ===========================================
# STRIPE PAYMENT CONFIGURATION
# ===========================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ===========================================
# EMAIL SERVICE CONFIGURATION
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@company.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@careservices.com

# ===========================================
# SMS SERVICE CONFIGURATION
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# FILE STORAGE CONFIGURATION
# ===========================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=care-services-production-files

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# ===========================================
# MONITORING AND LOGGING
# ===========================================
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=warn
LOG_TO_FILE=true

# ===========================================
# GOOGLE OAUTH CONFIGURATION
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ===========================================
# FACEBOOK OAUTH CONFIGURATION
# ===========================================
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# ===========================================
# PERFORMANCE OPTIMIZATION
# ===========================================
CACHE_ENABLED=true
CACHE_TTL_DEFAULT=3600
COMPRESSION_ENABLED=true
GZIP_LEVEL=6

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN=https://your-frontend-domain.com,https://www.your-frontend-domain.com
CORS_CREDENTIALS=true

# ===========================================
# SSL CONFIGURATION
# ===========================================
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================
PLATFORM_COMMISSION_RATE=10
MIN_BOOKING_ADVANCE_HOURS=2
MAX_BOOKING_DAYS_AHEAD=30
CANCELLATION_WINDOW_HOURS=24

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_REAL_TIME_FEATURES=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true 